<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popview_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/size_8_dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_pop_shot_gif"
                android:layout_width="@dimen/size_48_dp"
                android:layout_height="@dimen/size_48_dp"
                android:background="@drawable/popup_item_bg_1"
                android:padding="@dimen/size_8_dp"
                android:src="@drawable/ic_heart_svg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="70bpm"
                android:textSize="12dp"
                android:textColor="#555555"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/id_pop_shot_video"
                android:layout_width="@dimen/size_48_dp"
                android:layout_height="@dimen/size_48_dp"
                android:background="@drawable/popup_item_bg_1"
                android:padding="@dimen/size_8_dp"
                android:src="@drawable/ic_tempearture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="37.2â„ƒ"
                android:textSize="12dp"
                android:textColor="#555555"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <ImageView
                android:id="@+id/id_pop_shot_folder"
                android:layout_width="@dimen/size_48_dp"
                android:layout_height="@dimen/size_48_dp"
                android:background="@drawable/popup_item_bg_1"
                android:padding="@dimen/size_8_dp"
                android:src="@drawable/ic_blood_pressure" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="110/80mmHg"
                android:textSize="12dp"
                android:textColor="#555555"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_pop_shot_settings"
                android:layout_width="@dimen/size_48_dp"
                android:layout_height="@dimen/size_48_dp"
                android:background="@drawable/popup_item_bg_1"
                android:padding="@dimen/size_8_dp"
                android:src="@drawable/ic_blood_oxy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="95%"
                android:textSize="12dp"
                android:textColor="#555555"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>