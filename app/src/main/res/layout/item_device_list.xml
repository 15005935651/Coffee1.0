<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="30dp"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="@drawable/list_corner_round">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/svg_bluetooth_searching"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/deepgray"
            android:textSize="12sp"
            android:id="@+id/mDeviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无蓝牙名称"
            android:layout_weight="2" />

        <TextView
            android:textColor="@color/deepgray"
            android:textSize="12sp"
            android:id="@+id/mDeviceMacAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="蓝牙地址"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ble_connect_right"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:src="@drawable/svg_bluetooth_right"/>




</LinearLayout>